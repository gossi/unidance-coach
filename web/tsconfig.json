{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      /*
        The core
      */
      "@unidancing/arts": [
        "app/core/arts"
      ],
      "@unidancing/assistants": [
        "app/core/assistants"
      ],
      "@unidancing/choreography": [
        "app/core/choreography"
      ],
      "@unidancing/courses": [
        "app/core/courses"
      ],
      "@unidancing/exercises": [
        "app/core/exercises"
      ],
      "@unidancing/games": [
        "app/core/games"
      ],
      "@unidancing/home": [
        "app/core/home"
      ],
      "@unidancing/moves": [
        "app/core/moves"
      ],
      "@unidancing/skills": [
        "app/core/skills"
      ],
      "@unidancing/training": [
        "app/core/training"
      ],
      /*
        Supporting
      */
      "@unidancing/audio": [
        "app/supporting/audio"
      ],
      "@unidancing/spotify": [
        "app/supporting/spotify"
      ],
      "@unidancing/tina": [
        "app/supporting/tina"
      ],
      "@unidancing/ui": [
        "app/supporting/ui"
      ],
      "@unidancing/utils": [
        "app/supporting/utils"
      ],
      "@/tina/*": [
        "tina/__generated__/*"
      ],
      /*
        App
      */
      "@unidancing/app/tests/*": [
        "tests/*"
      ],
      "@unidancing/app/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "tina/**/*",
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ],
    "transform": {
      "include": [
        "app/**"
      ]
    }
  }
}